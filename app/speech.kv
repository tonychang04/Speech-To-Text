# Filename: speech.kv
<MyGrid>:

    GridLayout:
        rows: 2
        size: root.width, root.height

        Label:
            id: text_label
            font_name: 'STHeiti Medium.ttc'
            text: "Text: " + "\n" + "Translated Text: "

        Button:
            id: recorder
            text: "Record 10 sec: "
            on_press: root.button_record_translate()

